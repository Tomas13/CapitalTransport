<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <ImageView android:id="@+id/img_complaint_attachment"
                   android:src="@drawable/blank_image"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/complaint_image_height"/>

        <LinearLayout android:orientation="horizontal"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content">

            <Button android:id="@+id/btn_choice_picture"
                    android:drawableLeft="@android:drawable/ic_menu_gallery"
                    android:text="@string/choice_picture"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <Button android:id="@+id/btn_make_photo"
                    android:drawableLeft="@android:drawable/ic_menu_camera"
                    android:singleLine="true"
                    android:text="@string/make_photo"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView android:text="@string/route"
                  android:layout_marginTop="10dp"
                  android:textSize="18sp"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"/>

        <Spinner android:id="@+id/spinner_routes"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"/>

        <EditText android:id="@+id/et_complaint_message"
                  android:layout_marginTop="10dp"
                  android:hint="@string/type_complaint_text"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textMultiLine"
                  android:ems="10"
                  android:layout_gravity="center_horizontal"/>

        <EditText android:id="@+id/et_email"
                  android:layout_marginTop="10dp"
                  android:hint="@string/email"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:inputType="textEmailAddress"
                  android:ems="10"/>
    </LinearLayout>
</ScrollView>