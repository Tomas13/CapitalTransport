<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/drawer_bg"
    tools:context="kz.itsolutions.businformator.fragments.ScheduleInsideFragment">

    <EditText
        android:id="@+id/et_search_route_schedules"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="10dp"
        android:background="@drawable/search_edit_text"
        android:drawableLeft="@drawable/ic_search_white_24dp"
        android:drawableStart="@drawable/ic_search_white_24dp"
        android:hint="@string/search"
        android:padding="3dp"
        android:singleLine="true"
        android:textColor="@color/app_white" />

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        android:weightSum="13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_search_route_schedules"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="№"
            android:layout_marginStart="3dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:textColor="@color/app_white"
            android:textSize="10dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="МАРШРУТ"
            android:textColor="@color/app_white"
            android:textSize="10sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="ВРЕМЯ"
            android:textColor="@color/app_white"
            android:textSize="10sp" />


        <TextView
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:text="ИНТЕРВАЛ"
            android:textColor="@color/app_white"
            android:textSize="10sp" />

    </LinearLayout>


    <ListView
        android:layout_below="@id/ll_header"
        android:id="@+id/list_view_schedules"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/drawer_bg"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@drawable/list_divider"
        android:dividerHeight="0.2dp" />

</RelativeLayout>
