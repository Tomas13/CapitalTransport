<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_bg_selector"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">


    <!--android:textSize="@dimen/item_route_number_text_size" />-->

    <TextView
        android:layout_centerVertical="true"
        android:id="@+id/tv_route_number"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/route_number_shape"
        android:gravity="center"
        android:text="100"
        android:textColor="@color/route_list_item_text1_selector"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_width="fill_parent"

        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_route_number"
        android:layout_toEndOf="@id/tv_route_number"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:weightSum="13">


            <TextView
                android:id="@+id/tv_point_from"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="point from"
                android:textColor="@color/route_list_item_text2_selector"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_frwd_start"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="06:30"
                    android:textColor="@color/route_list_item_text2_selector"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/app_white" />

                <TextView
                    android:id="@+id/tv_frwd_end"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="22:30"
                    android:textColor="@color/route_list_item_text2_selector"
                    android:textSize="13sp" />

            </LinearLayout>


            <TextView

                android:id="@+id/tv_interval"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="2"
                android:maxLines="1"
                android:text="10-10"
                android:textColor="@color/route_list_item_text2_selector"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:weightSum="13">

            <TextView
                android:id="@+id/tv_point_to"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="point to"
                android:textColor="@color/route_list_item_text2_selector"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bkwd_start"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="06:30"
                    android:textColor="@color/route_list_item_text2_selector"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@color/app_white" />

                <TextView
                    android:id="@+id/tv_bkwd_end"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="22:30"
                    android:textColor="@color/route_list_item_text2_selector"
                    android:textSize="13sp" />

            </LinearLayout>

            <TextView
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_weight="2"
                android:maxLines="1"
                android:text="10-10"
                android:textColor="@color/route_list_item_text2_selector"
                android:textSize="13sp" />
        </LinearLayout>


    </LinearLayout>


   </RelativeLayout>