<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            />

    <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_alignParentBottom="true"
            android:padding="10dip"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:background="@android:color/transparent"
            app:radius="4dp"
            app:strokeWidth="0dp"
            app:fillColor="@android:color/white"
            app:pageColor="@color/action_bar_bg"
            />

    <ImageButton android:id="@+id/btn_prev_step"
                 android:visibility="invisible"
                 android:src="@drawable/btn_arrow_prev"
                 android:padding="15dp"
                 android:layout_centerVertical="true"
                 android:layout_alignParentLeft="true"
                 android:background="@android:color/transparent"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>

    <ImageButton android:id="@+id/btn_next_step"
                 android:src="@drawable/btn_arrow_next"
                 android:padding="15dp"
                 android:layout_centerVertical="true"
                 android:layout_alignParentRight="true"
                 android:background="@android:color/transparent"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
</RelativeLayout>