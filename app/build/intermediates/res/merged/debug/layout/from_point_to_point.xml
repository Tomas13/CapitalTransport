<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/left_drawer"
    android:layout_width="@dimen/slide_menu_width"
    android:layout_height="match_parent"
    android:background="@color/drawer_bg"
    >

    <LinearLayout android:id="@+id/top_line"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_alignParentTop="true"
        android:background="@color/tab_selected"/>

    <TextView android:id="@+id/tv_find_routes_hint"
        android:gravity="center_horizontal"
        android:layout_below="@+id/top_line"
        android:text="@string/select_points_from_to"
        android:textColor="@color/app_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout android:id="@+id/wrapper_point_from"
        android:orientation="horizontal"
        android:layout_below="@+id/tv_find_routes_hint"
        android:gravity="center_vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView android:text="@string/from_colon"
            android:textStyle="bold"
            android:textColor="@color/app_white"
            android:textSize="15sp"
            android:paddingLeft="7dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <AutoCompleteTextView android:id="@+id/et_point_from"
            android:layout_centerVertical="true"
            android:paddingRight="40dp"
            android:textColor="@color/app_white"
            android:paddingLeft="@dimen/padding_from"
            android:singleLine="true"
            android:textSize="14sp"
            android:hint="@string/point_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageButton android:id="@+id/btn_point_from_clear"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton android:id="@+id/btn_point_from_on_map"
            android:background="@android:color/transparent"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout android:id="@+id/wrapper_point_to"
        android:layout_below="@+id/wrapper_point_from"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView android:text="@string/to_colon"
            android:textStyle="bold"
            android:textSize="15sp"
            android:paddingLeft="7dp"
            android:textColor="@color/app_white"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <AutoCompleteTextView android:id="@+id/et_point_to"
            android:paddingRight="40dp"
            android:paddingLeft="@dimen/padding_to"
            android:textColor="@color/app_white"
            android:layout_alignParentLeft="true"
            android:singleLine="true"
            android:textSize="14sp"
            android:hint="@string/point_b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"/>

        <ImageButton android:id="@+id/btn_point_to_clear"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton android:id="@+id/btn_point_to_on_map"
            android:background="@android:color/transparent"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <LinearLayout android:id="@+id/bottom_wrapper"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout android:id="@+id/btn_vote"
            android:orientation="vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginRight="5dp"
            android:background="@color/action_bar_bg"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView android:text="@string/vote"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/btn_mail"
            android:orientation="vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:layout_marginRight="5dp"
            android:background="@color/action_bar_bg"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView android:text="@string/mail"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/btn_share"
            android:orientation="vertical"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@color/action_bar_bg"
            android:gravity="center"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:src="@drawable/share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView android:text="@string/share"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/lv_routes"
        android:fastScrollEnabled="true"
        android:layout_below="@+id/wrapper_point_to"
        android:layout_above="@+id/bottom_wrapper"
        android:layout_width="@dimen/slide_menu_width"
        android:layout_height="wrap_content"
        android:cacheColorHint="@android:color/transparent"
        android:dividerHeight="1dp"
        android:divider="@color/divider_color"/>


</RelativeLayout><!-- From: file:/D:/OTG/AstroBus/astrabus/app/src/main/res/layout/from_point_to_point.xml -->